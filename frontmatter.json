  "frontMatter.content.pageFolders": [
    {
      "title": "Root",
      "path": "[[workspace]]/content",
      "excludeSubdir": true
    },
    {
      "title": "Posts",
      "path": "[[workspace]]/content/posts",
      "previewPath": "posts"
    },
    {
      "title": "Horticulturists",
      "path": "[[workspace]]/content/horticulturists",
      "previewPath": "horticulturists"
    },
    {
      "title": "F66",
      "path": "[[workspace]]/content/games/66",
      "previewPath": "games/66"
    },
    {
      "title": "Factions",
      "path": "[[workspace]]/content/games/factions",
      "previewPath": "games/factions",
      "excludeSubdir": true
    },
    {
      "title": "Flagrant Picaresque",
      "path": "[[workspace]]/content/games/factions/supplements/picaresque",
      "previewPath": "games/factions/supplements/picaresque"
