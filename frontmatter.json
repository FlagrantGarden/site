  "frontMatter.content.snippets": {
    "Button": {
      "description": "Add a button linking to another page or external site.",
      "body": "{{< button [[ref-type]]=\"[[&url]]\" class=\"[[classes]]\" >}}[[text]]{{< /button >}}",
      "fields": [
        {
          "name": "text",
          "title": "Button Text: This displays on the button itself.",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "url",
          "title": "Button Url: Specify the URL this button should lead to.",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "ref-type",
          "title": "Link Reference Type: Choose relref if the link is site relative, href if external.",
          "type": "choice",
          "choices": [
            "relref",
            "href"
          ],
          "default": "relref"
        },
        {
          "name": "classes",
          "title": "CSS Classes: Specify a space separated list of classes.",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Flex-Column Content": {
      "description": "Add markdown separated into two or more columns, with configurable sizing.",
      "body": [
        "{{< flexcolumns ratio=\"[[&ratio]]\" flattenInMobileView=\"[[flattenInMobileView]]\" >}}",
        "",
        "[[&first-column-text]]",
        "",
        "<--->",
        "",
        "[[&remaining-columns-text]]",
        "",
        "{{< /flexcolumns >}}"
      ],
      "fields": [
        {
          "name": "ratio",
          "title": "Specify a ratio for the columns, like '1:3' or '3:5:3'. The ratio must match the number of columns used.",
          "type": "string",
          "single": true,
          "default": "1:1"
        },
        {
          "name": "first-column-text",
          "title": "First Column Text:\n\nWrite any valid Markdown, including additional shortcodes/snippets.",
          "type": "string",
          "default": ""
        },
        {
          "name": "remaining-columns-text",
          "title": "Remaining Text: As with the first column text, add any additional markdown.\n\nTo add another column, specify a blank line before and after this text:\n<--->\nThe text following the column notation will be in a new column.",
          "type": "string",
          "default": ""
        },
        {
          "name": "flattenInMobileView",
          "title": "Should be flattened to single stacked column in mobile view",
          "type": "choice",
          "choices": [
            "true",
            "false"
          ],
          "default": "true"
        }
      ]
    },
    "Multi-Column Content": {
      "description": "Add markdown separated into two or more columns, evenly spaced.",
      "body": [
        "{{< columns >}}",
        "",
        "[[&first-column-text]]",
        "",
        "<--->",
        "",
        "[[&remaining-columns-text]]",
        "",
        "{{< /columns >}}"
      ],
      "fields": [
        {
          "name": "first-column-text",
          "title": "First Column Text:\n\nWrite any valid Markdown, including additional shortcodes/snippets.",
          "type": "string",
          "default": ""
        },
        {
          "name": "remaining-columns-text",
          "title": "Remaining Text: As with the first column text, add any additional markdown.\n\nTo add another column, specify a blank line before and after this text:\n<--->\nThe text following the column notation will be in a new column.",
          "type": "string",
          "default": ""
        }
      ]
    },
    "Details": {
      "description": "Insert a collapsible panel of Markdown content with a title.",
      "body": [
        "{{< details title=\"[[title]]\" open=[[should-be-open]] >}}",
        "[[&selection]]",
        "{{< /details >}}"
      ],
      "fields": [
        {
          "name": "title",
          "title": "Title",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "selection",
          "title": "Body",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        },
        {
          "name": "should-be-open",
          "title": "Whether the details should be open when the page loads.",
          "type": "choice",
          "choices": [
            "true",
            "false"
          ],
          "default": "false"
        }
      ]
    },
    "Hint": {
      "description": "Add a colored callout hint/alert - info, warning, or danger.",
      "body": [
        "{{< hint [[type]] >}}",
        "[[&selection]]",
        "{{< /hint >}}"
      ],
      "fields": [
        {
          "name": "type",
          "title": "Type: How the hint should be styled.",
          "type": "choice",
          "choices": [
            "info",
            "warning",
            "danger"
          ],
          "default": ""
        },
        {
          "name": "selection",
          "title": "Body",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "Katex": {
      "description": "Insert katex to render math typesetting.",
      "body": [
        "{{< katex [[display-as-block]] class=\"[[classes]]\" >}}",
        "[[&selection]]",
        "{{< /katex >}}"
      ],
      "fields": [
        {
          "name": "display-as-block",
          "title": "Whether the rendered text should display as a block; leave blank to render inline.",
          "type": "choice",
          "choices": [
            "",
            "display"
          ],
          "default": ""
        },
        {
          "name": "classes",
          "title": "Class List: Specify any classes to add to the block in a space separated list.",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "selection",
          "title": "Katex: Specify your katex here.",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "Mermaid": {
      "description": "Add a chart or diagram using mermaid.js syntax",
      "body": [
        "{{< mermaid class=\"[[classes]]\" >}}",
        "[[&selection]]",
        "{{< /mermaid >}}"
      ],
      "fields": [
        {
          "name": "classes",
          "title": "Class List: Specify any classes to add to the block in a space separated list.",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "selection",
          "title": "Definition",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "Section List": {
      "description": "Add links and summaries for every child page; only valid for a section (\"_index.md\") file.",
      "body": "{{< section >}}",
      "fields": []
    },
    "Tabbed Content": {
      "description": "Add a set of markdown content with two different tabs.",
      "body": [
        "{{< tabs \"[[id]]\" >}}",
        "",
        "{{< tab \"[[&first-tab-name]]\" >}}",
        "",
        "[[&first-tab-content]]",
        "",
        "{{< /tab >}}",
        "",
        "{{< tab \"[[&second-tab-name]]\" >}}",
        "",
        "[[&second-tab-content]]",
        "",
        "{{< /tab >}}",
        "",
        "{{< /tabs >}}"
      ],
      "fields": [
        {
          "name": "id",
          "title": "ID: Every group of tabs needs a unique ID.",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "first-tab-name",
          "title": "First Tab Name",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "first-tab-content",
          "title": "First Tab Content",
          "type": "string",
          "default": ""
        },
        {
          "name": "second-tab-name",
          "title": "Second Tab Name",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "second-tab-content",
          "title": "Second Tab Content",
          "type": "string",
          "default": ""
        }
      ]
    },
    "New Tab": {
      "description": "Add another tab to existing tabbed content; only valid in an existing tabs shortcode.",
      "body": [
        "{{< tab \"[[name]]\" >}}",
        "",
        "[[&selection]]",
        "",
        "{{< /tab >}}"
      ],
      "fields": [
        {
          "name": "name",
          "title": "name",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "selection",
          "title": "selection",
          "type": "string",
          "single": true,
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "Art": {
      "description": "Add art as a figure with an optional content warning.",
      "body": "{{< art src=\"[[&mediaUrl]]\" alt=\"[[&alt]]\" class=\"[[classes]]\" content_warning=\"[[&content_warning]]\" />}}",
      "isMediaSnippet": true,
      "fields": [
        {
          "name": "classes",
          "title": "Class List: Specify any classes to add to the block in a space separated list.",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Art with Caption": {
      "description": "Add art as a figure with a caption and an optional content warning.",
      "body": [
        "{{< art src=\"[[&mediaUrl]]\" alt=\"[[&alt]]\" class=\"[[classes]]\" content_warning=\"[[&content_warning]]\" >}}",
        "[[&caption]]",
        "{{< /art >}}"
      ],
      "isMediaSnippet": true,
      "fields": [
        {
          "name": "classes",
          "title": "Class List: Specify any classes to add to the block in a space separated list.",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Itch Embed": {
      "description": "Add an embedded widget to a project on itch.io",
      "body": "{{< itchio id=\"[[id]]\" square=\"[[square]]\"  linkback=\"[[linkback]]\" dark=\"[[dark]]\" />}}",
      "fields": [
        {
          "name": "id",
          "title": "ID: Specify the ID for the project's embeddable iframe",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "square",
          "title": "Should display as a square instead of a rectangle",
          "type": "choice",
          "choices": [
            "true",
            "false"
          ],
          "default": "false"
        },
        {
          "name": "linkback",
          "title": "linkback",
          "type": "choice",
          "choices": [
            "true",
            "false"
          ],
          "default": "false"
        },
        {
          "name": "dark",
          "title": "dark",
          "type": "choice",
          "choices": [
            "true",
            "false"
          ],
          "default": "false"
        }
      ]
    },
    "Linked Art": {
      "description": "",
      "body": "{{< art src=\\\"[[&src]]\\\" alt=\\\"[[&alt]]\\\" class=\\\"[[classes]]\\\" content_warning=\\\"[[&content_warning]]\\\" />}}",
      "fields": [
        {
          "name": "src",
          "title": "Source URL for the image",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "alt",
          "title": "Alt text for the art.",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "content_warning",
          "title": "Content Warning: List any CWs appropriate for the art.",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "classes",
          "title": "Class List: Specify any classes to add to the block in a space separated list.",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Linked Art with Caption": {
      "description": "",
      "body": [
        "{{< art src=\\\"[[&src]]\\\" alt=\\\"[[&alt]]\\\" class=\\\"[[classes]]\\\" content_warning=\\\"[[&content_warning]]\\\" >}}",
        "[[&caption]]",
        "{{< /art >}}"
      ],
      "fields": [
        {
          "name": "src",
          "title": "Source URL for the image",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "alt",
          "title": "Alt text for the art.",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "content_warning",
          "title": "Content Warning: List any CWs appropriate for the art.",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "caption",
          "title": "caption",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "classes",
          "title": "Class List: Specify any classes to add to the block in a space separated list.",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    }
  },
  "frontMatter.content.sorting": [
    {
      "id": "byWeight",
      "title": "By Weight",
      "name": "weight",
