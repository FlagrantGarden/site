{
  "title": "Art (from remote source with caption)",
  "description": "Add art as a figure from a remote source with a caption and an optional content warning.",
  "body": [
    "{{< art src=\"[[&src]]\"",
    "        alt=\"[[&alt]]\"",
    "        class=\"[[classes]]\"",
    "        content_warning=\"[[&content_warning]]\"",
    ">}}",
    "[[&caption]]",
    "{{< /art >}}"
  ],
  "fields": [
    {
      "name": "src",
      "title": "Source URL for the image",
      "type": "string",
      "single": true,
      "default": ""
    },
    {
      "name": "alt",
      "title": "Alt text for the art.",
      "type": "string",
      "single": true,
      "default": ""
    },
    {
      "name": "content_warning",
      "title": "Content Warning: List any CWs appropriate for the art.",
      "type": "string",
      "single": true,
      "default": ""
    },
    {
      "name": "caption",
      "title": "caption",
      "type": "string",
      "single": true,
      "default": ""
    },
    {
      "name": "classes",
      "title": "Class List: Specify any classes to add to the block in a space separated list.",
      "type": "string",
      "single": true,
      "default": ""
    }
  ]
}
