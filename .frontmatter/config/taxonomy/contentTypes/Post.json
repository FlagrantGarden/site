{
  "name": "Post",
  "$schema": "https://beta.frontmatter.codes/config/taxonomy.contenttypes.schema.json",
  "pageBundle": false,
  "previewPath": "posts",
  "fields": [
    {
      "title": "Author's Name",
      "name": "author",
      "type": "string",
      "single": true
    },
    {
      "title": "Title",
      "name": "title",
      "type": "string",
      "single": true
    },
    {
      "title": "Link Title - used when in a list",
      "name": "linktitle",
      "type": "string",
      "single": true
    },
    {
      "title": "Summary - displayed when paginated or in a list and as page description",
      "name": "summary",
      "type": "string"
    },
    {
      "title": "Weight - determines order for pages; lower weight first",
      "name": "weight",
      "type": "number"
    },
    {
      "title": "Publishing date",
      "name": "date",
      "type": "datetime",
      "default": "{{now}}",
      "isPublishDate": true
    },
    {
      "title": "Content preview",
      "name": "preview",
      "type": "image"
    },
    {
      "title": "Is in draft",
      "name": "draft",
      "type": "draft"
    },
    {
      "title": "Display Table of Contents",
      "name": "bookToC",
      "type": "boolean",
      "default": true
    },
    {
      "title": "Hide from site menu",
      "name": "bookHidden",
      "type": "boolean"
    },
    {
      "title": "Exclude from site search",
      "name": "bookSearchExclude",
      "type": "boolean"
    },
    {
      "title": "Display Comments",
      "name": "bookComments",
      "type": "boolean",
      "default": false
    },
    {
      "title": "Tags",
      "name": "tags",
      "type": "tags"
    },
    {
      "title": "Categories",
      "name": "categories",
      "type": "categories"
    },
    {
      "title": "type",
      "name": "type",
      "type": "string",
      "default": "Post",
      "hidden": true
    }
  ]
}
